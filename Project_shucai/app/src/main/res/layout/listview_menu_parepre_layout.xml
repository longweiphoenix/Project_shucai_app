<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/menu_parepre_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="126dp"
            android:src="@mipmap/prepare1"
            android:layout_marginTop="7dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/menu_parepre_material_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="板栗"
                    android:layout_marginTop="22dp"
                    android:textSize="12sp"
                    android:textColor="@color/fontgreen"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:id="@+id/menu_parepre_weight_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="350g"
                    android:layout_marginTop="22dp"
                    android:gravity="right"
                    android:layout_marginRight="30dp"
                    android:textSize="12sp"
                    android:textColor="@color/fontblack1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/menu_parepre_material_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姜"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/fontgreen"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:id="@+id/menu_parepre_weight_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="5g"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/fontblack1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/menu_parepre_material_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生抽"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/fontgreen"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:id="@+id/menu_parepre_weight_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="5g"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/fontblack1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/menu_parepre_material_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白糖"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/fontgreen"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:id="@+id/menu_parepre_weight_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="5g"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/fontblack1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/menu_parepre_material_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/fontgreen"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:id="@+id/menu_parepre_weight_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="适量"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/fontblack1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
