<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/shop"
            android:textSize="@dimen/info_title_text18sp"
            android:layout_width="wrap_content"
            android:textColor="@color/title_font_color"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/search_goods"
            android:layout_toLeftOf="@+id/shopping_car"
            android:layout_width="@dimen/back_arrow_height18dp"
            android:background="@mipmap/search_goods"
            android:layout_height="@dimen/back_arrow_height18dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/shopping_car"
            android:layout_margin="@dimen/back_arrow_width"
            android:layout_alignParentRight="true"
            android:background="@mipmap/shopping_car_green"
            android:layout_width="@dimen/back_arrow_height18dp"
            android:layout_height="@dimen/back_arrow_height18dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_margin_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/shop_background">
        <RadioGroup
            android:id="@+id/shop_group"
            android:layout_width="@dimen/shop_sort_out80dp"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/all_sort"
                android:text="@string/all_sort"
                android:gravity="center"
                android:button="@null"
                android:checked="true"
                android:textSize="@dimen/shop_good_font"
                android:textColor="@color/selected_text"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/large_head_margin40dp"
                android:layout_marginBottom="2dp"/>
            <RadioButton
                android:id="@+id/organic_vegetable"
                android:text="@string/organic_vegetable"
                android:gravity="center"
                android:button="@null"
                android:textSize="@dimen/shop_good_font"
                android:textColor="@color/title_font_color"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/large_head_margin40dp"
                android:layout_marginBottom="2dp"/>
            <RadioButton
                android:textSize="@dimen/shop_good_font"
                android:id="@+id/current_organic_vegetable"
                android:text="@string/current_organic_vegetable"
                android:gravity="center"
                android:button="@null"
                android:checked="true"
                android:textColor="@color/title_font_color"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/large_head_margin40dp"
                android:layout_marginBottom="2dp"/>
            <RadioButton
                android:id="@+id/farm_native"
                android:text="@string/farm_native"
                android:gravity="center"
                android:textSize="@dimen/shop_good_font"
                android:button="@null"
                android:checked="true"
                android:textColor="@color/title_font_color"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/large_head_margin40dp"
                android:layout_marginBottom="2dp"/>
        </RadioGroup>
        <ListView
            android:id="@+id/shop_goods_show"
            android:dividerHeight="@dimen/next_arrow_width"
            android:layout_width="match_parent"
            android:background="@color/shop_background"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>