<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_setting_arow"
            android:layout_width="13dp"
            android:layout_height="21dp"
            android:background="@mipmap/arow"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="32dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="图片设置"
            android:textSize="18sp"
            android:textColor="@color/fontblack"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/image_setting_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/fontgreen"
            android:textSize="15sp"
            android:layout_marginTop="32dp"
            android:paddingRight="12dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor"/>
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="horizontal">
          <Button
              android:id="@+id/image_setting_button1"
              android:layout_width="18dp"
              android:layout_height="18dp"
              android:layout_marginTop="21dp"
              android:layout_marginLeft="12dp"
              android:background="@drawable/radio_selector"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textScaleX="1.05"
              android:textSize="15sp"
              android:textColor="@color/fontgreen"
              android:text="智能切换(推荐)"
              android:paddingLeft="27dp"
              android:layout_marginTop="23dp"/>
      </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/image_setting_button2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/radio_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textScaleX="1.05"
                android:textColor="@color/fontgreen"
                android:text="高清"
                android:textSize="15sp"
                android:paddingLeft="27dp"
                android:layout_marginTop="23dp"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor"/>

</LinearLayout>
