<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#cbcbcb" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冬日上火，三招解决"
            android:textSize="14sp"
            android:textColor="#698d45"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/image"
            android:layout_width="97dp"
            android:layout_height="98dp"
            android:src="@mipmap/organic_life_one"
            android:layout_gravity="center"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cbcbcb" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/love"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:src="@mipmap/love"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center"
            android:onClick="loveOnClick"/>
        <TextView
            android:id="@+id/love_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="166"
            android:textSize="12sp"
            android:textColor="#747378"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/see"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:src="@mipmap/eyes"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:onClick="seeOnClick"/>
        <TextView
            android:id="@+id/see_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="175"
            android:textSize="12sp"
            android:textColor="#747378"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</LinearLayout>