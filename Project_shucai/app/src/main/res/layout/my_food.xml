<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="13dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arow"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的粮票"
            android:textColor="#323232"
            android:textSize="18dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用规则"
            android:textColor="#698d45"
            android:textSize="15dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cbcbcb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:src="@mipmap/liangpiao"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="邀请好友获得粮票"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="15dp"
            android:textColor="#323232"/>
        <ImageView
            android:id="@+id/get_food"
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:src="@mipmap/arow_right"
            android:layout_marginTop="23dp"
            android:layout_marginRight="13dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#cbcbcb"
        android:alpha="0.2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <EditText
            android:id="@+id/favorable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="输入优惠码"
            android:textSize="12dp"
            android:textColor="#787878"
            android:layout_marginLeft="12dp"
            android:paddingLeft="12dp"
            android:background="@null"/>
        <TextView
            android:id="@+id/exchange"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="兑换"
            android:background="@drawable/duihuan"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_marginRight="25dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="201dp"
        android:layout_height="102dp"
        android:src="@mipmap/term_one"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"/>
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="31dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:text="你还没有领取我们的粮票呢，"
            android:textSize="9dp"
            android:textColor="#787878"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="赶快邀请好友加入我们把！"
            android:textSize="9dp"
            android:textColor="#787878"/>
    </LinearLayout>

</LinearLayout>