<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/menu_arow_imageview"
            android:layout_width="13dp"
            android:layout_height="21dp"
            android:background="@mipmap/arow"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="32dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/fontblack"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/menu_heart_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/heart_white"
            android:layout_marginTop="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arow2"
            android:layout_marginTop="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="144dp"
                android:layout_height="161dp"
                android:background="@mipmap/menu1"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/fontblack1"
                android:text="@string/menu_one"
                android:layout_marginTop="28dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_one"
                android:textSize="12sp"
                android:textColor="@color/fontblack2"
                android:layout_marginTop="13dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="33dp">
                <TextView
                    android:id="@+id/parepre_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="准备"
                    android:textSize="11sp"
                    android:textColor="@color/fontgreen"
                    android:gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="9dp"
                    android:layout_gravity="center"
                    android:background="@color/linecolor"/>
                <TextView
                    android:id="@+id/process_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="流程"
                    android:textSize="11sp"
                    android:textColor="@color/fontblack1"
                    android:gravity="center"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecolor"
                android:layout_marginTop="9dp"/>
            <ListView

                    android:id="@+id/menu_parepre_listview"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            <ListView
                android:visibility="gone"
                android:id="@+id/menu_process_listview"
                android:layout_width="match_parent"
                android:layout_height="1200dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
