<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/advice_background">
        <TextView
            android:id="@+id/advive_arow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/left_arow"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="13dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pen"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@color/white"
            android:hint="@string/your_advice"
            android:textColorHint="@color/linecolor"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="13dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/deepgrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/envelope"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@color/white"
            android:hint="@string/contact_way"
            android:textColorHint="@color/linecolor"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="13dp"/>
    </LinearLayout>

</LinearLayout>
