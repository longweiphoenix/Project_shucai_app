<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/search_home"
                android:layout_width="@dimen/home_setting_width"
                android:layout_height="@dimen/home_setting_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/info_margin"
                android:background="@mipmap/search_goods" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/info_margin"
                android:text="@string/home"
                android:textColor="@color/title_font_color"
                android:textSize="@dimen/content_font_size" />

            <TextView
                android:id="@+id/shopping_car_home"
                android:layout_width="@dimen/home_setting_height"
                android:layout_height="@dimen/home_setting_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/info_margin"
                android:layout_marginRight="@dimen/info_margin"
                android:background="@mipmap/shopping_car_green" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/setting_me"
                android:layout_width="@dimen/home_setting_width"
                android:layout_height="@dimen/home_setting_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/info_margin"
                android:background="@mipmap/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="6dp"
                android:drawableRight="@mipmap/arrow_down"
                android:padding="@dimen/info_margin"
                android:text="@string/user_nick_name"
                android:textColor="@color/title_font_color"
                android:textSize="@dimen/content_font_size" />

            <TextView
                android:id="@+id/shopping_car_me"
                android:layout_width="@dimen/home_setting_height"
                android:layout_height="@dimen/home_setting_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/info_margin"
                android:layout_marginRight="@dimen/info_margin"
                android:background="@mipmap/shopping_car_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/shop"
                android:textColor="@color/title_font_color"
                android:textSize="@dimen/shop_good_font" />

            <TextView
                android:id="@+id/shopping_car_shop"
                android:layout_width="@dimen/back_arrow_height18dp"
                android:layout_height="@dimen/back_arrow_height18dp"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/back_arrow_width"
                android:background="@mipmap/shopping_car_green" />

            <TextView
                android:id="@+id/search_goods_shop"
                android:layout_width="@dimen/back_arrow_height18dp"
                android:layout_height="@dimen/back_arrow_height18dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/shopping_car_shop"
                android:background="@mipmap/search_goods" />
        </RelativeLayout>


        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rel_home">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:button="@null"
            android:drawableTop="@mipmap/home_page"
            android:gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="@string/home" />

        <RadioButton
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:button="@null"
            android:drawableTop="@mipmap/shop_black"
            android:gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="@string/shop" />

        <RadioButton
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:button="@null"
            android:drawableTop="@mipmap/me"
            android:gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="@string/me" />
    </RadioGroup>

</RelativeLayout>