<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/activity_shoppingcart_payment_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/shoppin_gcart"
            android:background="@null"
            android:src="@mipmap/arow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/gewuce"
            android:layout_marginTop="@dimen/gwuctop"
            android:layout_marginBottom="@dimen/gwucBottom"
            android:textSize="@dimen/gwuc_zti"
            android:textColor="#323232"/>
        <TextView
            android:id="@+id/activity_shoppingcart_payment_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bjiRight"
            android:layout_alignParentRight="true"
            android:text="@string/bji"
            android:textSize="@dimen/bjizti"
            android:textColor="#698D45"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cdcdcd"
        android:layout_marginTop="8dp"/>
    <ListView
        android:id="@+id/activity_shoppingcart_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cdcdcd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="251dp">
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cdcdcd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/reduce"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textSize="15sp"
            android:textColor="#323232"
            android:layout_marginLeft="21dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总价："
            android:textSize="15sp"
            android:textColor="#323232"
            android:layout_marginLeft="19dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="15sp"
            android:textColor="#698d45"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="375"
            android:textSize="15sp"
            android:textColor="#698d45"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:background="@drawable/jiesk"
            android:text="结算"
            android:textSize="15sp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>