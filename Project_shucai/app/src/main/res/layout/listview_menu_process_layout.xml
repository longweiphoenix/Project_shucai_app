<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/menu_process_imageview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="126dp"
            android:src="@mipmap/process1"
            android:layout_marginTop="7dp" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textColor="@color/fontgreen"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/menu_process"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/number"
                android:textSize="11sp"
                android:layout_alignTop="@id/number"
                android:textColor="@color/fontblack1"
                android:layout_marginLeft="4dp"
                android:text="将排骨冷水下锅氽烫，水开后将排骨氽汤至去除杂质和血水" />=

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
