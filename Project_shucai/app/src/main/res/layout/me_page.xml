<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ImageView
            android:layout_width="@dimen/large_head"
            android:layout_height="@dimen/large_head"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/info_margin"
            android:layout_marginTop="@dimen/info_margin"
            android:src="@mipmap/head_portrait_big" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/watch_margin_fans"
                android:text="3关注"
                android:textColor="@color/title_font_color"
                android:textSize="@dimen/content_font_size" />

            <TextView
                android:id="@+id/fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0粉丝"
                android:textColor="@color/title_font_color"
                android:textSize="@dimen/content_font_size" />

        </LinearLayout>


        <ListView
            android:id="@+id/home_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_margin_line"
            android:background="@color/lines" />
    </LinearLayout>

</RelativeLayout>